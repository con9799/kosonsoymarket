<div class="post-item swiper-slide col-6 col-md-4 col-lg-3 col-xl-2" item="_id_">
    <div class="card shadow-sm bg-template-light border-0 mb-4 grid">
        <figure class="product-image grid-image" style="background-image: url(_image_);" view-post="_id_"></figure>
        <button class="btn btn-sm grid-btn btn-link p-0" bookmark="_id_"><i class="material-icons md-18">_bookmark_</i></button>
        <div class="badge badge-warning text-white grid-badge float-right mt-1">_date_</div>
        <div class="card-body" view-post="_id_">
           <p class="text-white mb-1 mt-2 h6 d-block three-dot">_title_</p>
           <p class="text-white small mb-2 three-dot">_category_</p>
           <h6 class="text-warning font-weight-normal mb-0">&nbsp;</h6>
           <p class="text-white small text-mute mb-0 three-dot">_price_</p>
           <button class="btn btn-warning button-rounded-36 shadow-sm float-bottom-right"><i class="material-icons md-18">arrow_forward</i></button>
        </div>
    </div>
</div>